{
  "name": "elevator-system",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "mocha --exit \"src/tests/**/*.test.js\"",
    "db:migrate": "npx sequelize-cli db:migrate --migrations-path src/database/migrations --models-path src/database/models --config src/database/config/config.js",
    "db:seed": "npx sequelize-cli db:seed:all --seeders-path src/database/seeders --config src/database/config/config.js",
    "db:rollback": "npx sequelize-cli db:seed:undo:all --seeders-path src/database/seeders --config src/database/config/config.js"
  },
  "author": "Vincent Kituyi",
  "license": "ISC",
  "devDependencies": {
    "express": "^5.1.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "chai": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express-validator": "^7.2.1",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.1",
    "sequelize": "^6.37.7",
    "winston": "^3.18.3"
  }
}
